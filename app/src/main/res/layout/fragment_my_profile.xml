<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userprofile.MyProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text15"
                android:background="@drawable/edittext_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/first_names"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/middle_initialss"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtfirst_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtmiddlename"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/last_names"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/dobs"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtlastname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtdob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/ethinicitys"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/genders"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtethinicity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtgender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/emails"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/phone_numbers"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtemail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtphone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/roles"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:textSize="@dimen/texts14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/text10">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtrole"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/texts13" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>