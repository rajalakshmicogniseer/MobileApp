<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.DashBoardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/view_click"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/text120"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/active_btn"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/activeuser"
                        android:textAlignment="center"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/texts16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text20"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/active"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/texts16" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/view_clicks"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/text120"
                android:layout_marginLeft="@dimen/text16"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/pendingbtn"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/pending"
                        android:textAlignment="center"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/texts16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text20"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/pending"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/texts16" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/text120"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/reject_btn"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/rejec"
                        android:textAlignment="center"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/texts16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text20"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/reject"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/texts16" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/text120"
                android:layout_marginLeft="@dimen/text16">

            </View>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>